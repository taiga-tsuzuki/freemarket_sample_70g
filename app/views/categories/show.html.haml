.header
  .header__box
    .header__box__main
      = link_to root_path do
        = image_tag "/material/logo/logo.png", size: "140x40"
      = form_with url: "#", class: "search__box" do |f|
        = f.text_field :content, class: 'search__box__form', placeholder: ' キーワードから探す'
      = link_to "#" do
        = image_tag "/material/icon/icon-search 1.png", size: "24x24", class: "search__box__btn"
    .header__box__sub
      %ul.lists__left
        %li
          = link_to "#",class: "category" do
            カテゴリー
        %li
          = link_to "#",class: "brand" do
            ブランド
      - if user_signed_in?
        %ul.lists__right
          %li
            = link_to "ログアウト",destroy_user_session_path,method: :delete, class: 'login'
      - else
        %ul.lists__right
          %li
            = link_to "ログイン",new_user_session_path, class: 'login'
          %li
            = link_to "新規登録",new_user_registration_path, class: 'signin'
.categories
  %ul.categories__lists
    %li.list__head 
      = link_to root_path do
        FURIMA
    %li.list
      カテゴリー一覧
    -if @category.children.first.present? && @category.children.first.children.first.present? then
      %li.list
        = @category.name
    -elsif  @category.children.first.present? then
      %li.list
        = link_to category_path(@category.parent.id) do
          = @category.parent.name
      %li.list
        = @category.name
    -else
      %li.list
        = link_to category_path(@category.parent.parent.id) do
          = @category.parent.parent.name
          = @category.parent.parent.id
      %li.list
        = link_to category_path(@category.parent.id) do
          = @category.parent.name
          =@category.parent.id
      %li.list
        = @category.name


.category__main
  .product
    .product__lists
    -if @category.children.first.present? && @category.children.first.children.first.present? then
      %h2 
        = @category.name
        の商品一覧（１ページ目）
      .product__lists__list
        - @category_children.each do |category_children|
          - category_children.children.each do |category_child|
            - category_child.items.each do |category|
              - category.images.first(1).each do |image|
                - if category.item_purchaser_id.blank?
                  = link_to item_path(category.id) do
                    .image
                      = image_tag "#{image.image}", alt: "テスト", size: "200x150"
                    
                    .item__text
                      .item__text__name
                        = category.item_name
                      .item__text__details
                        %ul
                          %li.yen
                            = category.price
                          %li
                            ★2
                        %p
                          (税込)

    -elsif  @category.children.first.present? then
      %h2 
        = @category.name
        の商品一覧（１ページ目）
      .product__lists__list
        - @category_children.each do |category_child|
          - category_child.items.each do |category|
            - category.images.first(1).each do |image|
              - if category.item_purchaser_id.blank?
                = link_to item_path(category.id) do
                  .image
                    = image_tag "#{image.image}", alt: "テスト", size: "200x150"
                  
                  .item__text
                    .item__text__name
                      = category.item_name
                    .item__text__details
                      %ul
                        %li
                          .yen
                            = category.price
                        %li
                          ★2
                      %p
                        (税込)
    -else
      %h2 
        = @category.name
        の商品一覧（１ページ目）
      .product__lists__list
        - @categories.each do |category|
          - category.images.first(1).each do |image|
            - if category.item_purchaser_id.blank?
              = link_to item_path(category.id) do
                .image
                  = image_tag "#{image.image}", alt: "テスト", size: "200x150"
                
                .item__text
                  .item__text__name
                    = category.item_name
                  .item__text__details
                    %ul
                      %li.yen
                        = category.price
                      %li
                        ★2
                    %p
                      (税込)

  = paginate(@categories)


