.body
  = render partial:"shared/index_header"
  .nav
    %ul.nav__itemscope
      %li.nav__itemscope__itemtype
        = link_to root_path,class: "navgation" do
          FURIMA
        .nav__itemscope__itemtype__right
          　>　
      %li.nav__itemscope__itemtype2
        発送元・お届け先住所変更
  .main
    .main__left
      .main__left__nav
        .nav__lists
          %li.nav__lists__list
            =link_to user_path(current_user.id), class: "moji" do
              マイページ
          %li.nav__lists__list
            =link_to onsale_user_path(current_user.id),class: "moji" do
              出品した商品-出品中
          %li.nav__lists__list
            =link_to done_user_path(current_user.id),class: "moji" do
              出品した商品-売却済み
          %li.nav__lists__list
            =link_to bought_user_path(current_user.id),class: "moji" do
              購入商品一覧
          %li.nav__lists__list
            =link_to like_user_path(current_user.id),class: "moji" do
              お気に入り商品一覧
          %li.nav__lists__list
            =link_to location_edit_user_path,class: "moji" do
              発送元・お届け先住所変更
          %li.nav__lists__list
            =link_to pay_creditcards_path,class: "moji" do
              支払い方法
          %li.nav__lists__list
            =link_to profile_edit_user_path,class: "moji" do
              本人情報の変更
          %li.nav__lists__list
            = link_to "ログアウト",destroy_user_session_path,method: :delete, class: 'moji'
    .main__right
      .main__right__top
        発送元・お届け先住所変更
      .main__right__form
        = form_with(model: @location, url: location_update_user_path, method: :post, local:true) do |f|
          = render "devise/shared/error_messages", resource: @location
          .form-group-edit2
            .form-group-edit2__label
              .form-group-edit2__label__moji
                苗字
              %span.form-group-edit2__label__require 必須
            = f.text_field :family_name, {class:'form-group-edit2__input'}
          .form-group-edit2
            .form-group-edit2__label
              .form-group-edit2__label__moji
                名前
              %span.form-group-edit2__label__require 必須
            = f.text_field :first_name, {class:'form-group-edit2__input'}
          .form-group-edit2
            .form-group-edit2__label
              .form-group-edit2__label__moji
                苗字 (カナ)
              %span.form-group-edit2__label__require 必須
            = f.text_field :family_name_kana, {class:'form-group-edit2__input'}
          .form-group-edit2
            .form-group-edit2__label
              .form-group-edit2__label__moji
                名前（カナ）
              %span.form-group-edit2__label__require 必須
            = f.text_field :first_name_kana, {class:'form-group-edit2__input'}
          .form-group-edit2
            .form-group-edit2__label
              .form-group-edit2__label__moji
                郵便番号
              %span.form-group-edit2__label__require 必須
            = f.text_field :postal_code, {class:'form-group-edit2__input'}
          .form-group-edit2
            .form-group-edit2__label
              .form-group-edit2__label__moji
                都道府県
              %span.form-group-edit2__label__require 必須
            = f.text_field :prefecture, {class:'form-group-edit2__input'}
          .form-group-edit2
            .form-group-edit2__label
              .form-group-edit2__label__moji
                市町村
              %span.form-group-edit2__label__require 必須
            = f.text_field :city, {class:'form-group-edit2__input'}
          .form-group-edit2
            .form-group-edit2__label
              .form-group-edit2__label__moji
                建物名
            = f.text_field :building_name, {class:'form-group-edit2__input'}
          .form-group-edit2
            .form-group-edit2__label
              .form-group-edit2__label__moji
                電話番号
              %span.form-group-edit2__label__require 必須
            = f.text_field :phone_name, {class:'form-group-edit2__input'}
          .form_submit
            = f.submit '変更する', class: "edit-btn-default-btn"

= render partial: "shared/index_footer"